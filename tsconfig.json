{
    "compileOnSave": true,
    "compilerOptions": {
      "module": "es2015",
      "noImplicitAny": true,
      "noEmitOnError": true,
      "removeComments": false,
      "lib": ["es2015", "dom"],
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": false,
      "moduleResolution": "node",
      "target": "es5",
      "declaration": true,
      "typeRoots": [
        "./src/definitions",
        "./typings/@types",
        "./node_modules/@types"
      ],
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "app/*": [ "src/Modules/*" ]
      }
    },
    "include": [
      ".",
      "src/**/*",
      "typings/globals/**/*"
    ]
  }
  